<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgOficina"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NomCentro"
        android:id="@+id/txtNomBuscador"
        android:layout_alignTop="@+id/imgOficina"
        android:layout_toEndOf="@+id/imgOficina"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Direccion"
        android:id="@+id/txtDireccionBuscador"
        android:layout_below="@+id/txtNomBuscador"
        android:layout_toEndOf="@+id/imgOficina"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ubicacion"
        android:id="@+id/txtUbicacionOficina"
        android:layout_below="@+id/txtDireccionBuscador"
        android:layout_toEndOf="@+id/imgOficina"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginBottom="15dp" />

</RelativeLayout>